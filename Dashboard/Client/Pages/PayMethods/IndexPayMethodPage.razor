@page "/PayMethod/Index"
@inject IRepository _repository

<IndexPayMethodComponent PayMethods="payMethods" />

@code {
    private List<PayMethodVM> payMethods = new List<PayMethodVM>();

    protected override void OnInitialized()
    {
        GetPayMethods();
    }

    private void GetPayMethods()
    {
        payMethods = _repository.GetPayMethods();
    }
}
