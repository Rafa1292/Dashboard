@page "/PayMethod/Index"
@inject IRepository _repository
@inject IMatToaster Toaster

<IndexPayMethodComponent PayMethods="payMethods" Delete="Delete" />

@code {
    private List<PayMethodVM> payMethods = new List<PayMethodVM>();

    protected override void OnInitialized()
    {
        GetPayMethods();
    }

    private void GetPayMethods()
    {
        payMethods = _repository.GetPayMethods();
    }

    private async Task Delete()
    {
        Toaster.Add("Cliente eliminado", MatToastType.Success, "Eliminado", "");

    }
}
