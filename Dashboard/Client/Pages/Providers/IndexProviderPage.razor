@page "/Provider/Index"
@inject IRepository _repository
@inject IMatToaster Toaster

<IndexProviderComponent Providers="providers" Delete="Delete"/>

@code {
    private List<ProviderVM> providers = new List<ProviderVM>();

    protected override void OnInitialized()
    {
        GetCustomers();
    }

    private void GetCustomers()
    {
        providers = _repository.GetProviders();
    }

    private async Task Delete()
    {
        Toaster.Add("Cliente eliminado", MatToastType.Success, "Eliminado", "");

    }
}
