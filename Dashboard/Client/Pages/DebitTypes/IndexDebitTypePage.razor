@page "/DebitType/Index"
@inject IRepository _repository
@inject IMatToaster Toaster

<IndexDebitTypeComponent DebitTypes="debitTypes" Delete="Delete"/>

@code {
    private List<DebitTypeVM> debitTypes = new List<DebitTypeVM>();

    protected override void OnInitialized()
    {
        GetDebitTypes();
    }

    private void GetDebitTypes()
    {
        debitTypes = _repository.GetDebitTypes();

    }

    private async Task Delete()
    {
        Toaster.Add("Cliente eliminado", MatToastType.Success, "Eliminado", "");

    }

}
