@page "/Customer/Index"
@inject IRepository _repository
@inject IMatToaster Toaster

<IndexCustomerComponent Customers="customers" Delete="Delete"/>

@code{

    private List<CustomerVM> customers = new List<CustomerVM>();

    protected override void OnInitialized()
    {
        GetCustomers();
    }

    private void GetCustomers()
    {
        customers = _repository.GetCustomers();

    }

    private async Task Delete()
    {
        Toaster.Add("Cliente eliminado", MatToastType.Success, "Eliminado", "");

    }
}
