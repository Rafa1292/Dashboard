<h4 class="col-12 text-center text-black-50 pt-4">Trabajador</h4>

<EditForm Model="Worker" Class="">
    <p class=" my-4">
        <MatTextField @bind-Value="Worker.Name" Label="Nombre" FullWidth="true"></MatTextField>
    </p>
    <p class=" my-4">
        <MatNumericUpDownField Label="Telefono"
                               FullWidth="true"
                               @bind-Value=@Worker.Phone
                               DecimalPlaces=0>
        </MatNumericUpDownField>
    </p>
    <p class=" my-4">
        <MatNumericUpDownField Label="Monto maximo aprobado"
                               @bind-Value=@Worker.Salary
                               FullWidth="true"
                               DecimalPlaces=0>
        </MatNumericUpDownField>
    </p>
    <p class="my-4">
        <MatDatePicker @bind-Value="Worker.StartOfWork" Label="Inicio laboral"></MatDatePicker>
    </p>
    <div class="col-12 d-flex flex-wrap justify-content-center">
        <MatButton Class="col-md-6" Style="" Raised="true">Guardar</MatButton>
        <MatButton Class="col-md-6" Style="" Dense="true">Volver</MatButton>
    </div>
</EditForm>

@code {
    [Parameter] public WorkerVM Worker { get; set; }
}