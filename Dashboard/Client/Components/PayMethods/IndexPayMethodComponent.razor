<h4 class="col-12 text-center p-4 font-weight-bold text-black-50">Tipos de pago</h4>

<div class="col-md-6 p-2 mat-elevation-z6 ">
    @foreach (var payMethod in payMethods)
    {
        <div class="col-12 p-2 m-0 d-flex flex-wrap border-bottom border-secondary">
            <span class="col-md-8 justify-content-center d-flex align-items-center py-3">
                <strong>
                    @payMethod.Description
                </strong>
            </span>
            <div class="col-md-4 d-flex flex-wrap justify-content-center">
                <MatButton Class="col-12" Style="" Raised="true">Editar</MatButton>
                <MatButton Class="col-12" Style="" Dense="true">Elimminar</MatButton>
            </div>
        </div>

    }
</div>





@code {
    private List<PayMethodVM> payMethods = new List<PayMethodVM>();

    protected override void OnInitialized()
    {
        GetPayMethods();
    }

    private void GetPayMethods()
    {
        payMethods.Add(new PayMethodVM() { Description = "Efectivo" });
        payMethods.Add(new PayMethodVM() { Description = "Tarjeta" });
        payMethods.Add(new PayMethodVM() { Description = "Sinpe" });

    }
}
