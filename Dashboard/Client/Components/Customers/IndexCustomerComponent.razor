<h4 class="col-12 text-center p-4 font-weight-bold  text-black-50">Clientes</h4>

<div class="col-md-8 d-flex flex-wrap p-2 mat-elevation-z6">
    <div class="col-12 p-2 m-0 d-flex flex-wrap  border-bottom border-secondary">
        <span class="col-3 justify-content-center align-items-center p-2 text-center smallDeviceHideColumnTable"><strong>Nombre</strong></span>
        <span class="col-3 justify-content-center align-items-center p-2 text-center smallDeviceHideColumnTable"><strong>Telefono</strong></span>
        <span class="col-3 justify-content-center align-items-center p-2 text-center smallDeviceHideColumnTable"><strong>Monto aprobado</strong></span>
    </div>
    @foreach (var customer in Customers)
    {
        <div class="col-12 p-2 m-0 d-flex flex-wrap  border-bottom border-secondary">
            <span class="col-md-3 justify-content-center d-flex align-items-center p-2">@customer.Name</span>
            <span class="col-md-3 justify-content-center d-flex align-items-center p-2">@customer.Phone</span>
            <span class="col-md-3 justify-content-center d-flex align-items-center p-2">@customer.MaxAmount</span>
            <div class="col-md-3 d-flex flex-wrap justify-content-center">
                <MatButton Class="col-12" Style="" Raised="true">Editar</MatButton>
                <MatButton Class="col-12" Style="" Dense="true">Elimminar</MatButton>
            </div>
        </div>

    }
</div>





@code {
    [Parameter] public List<CustomerVM> Customers { get; set; }
}
