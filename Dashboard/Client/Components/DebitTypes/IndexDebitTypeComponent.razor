<div class="col-12 d-flex flex-wrap justify-content-center p-4">
    <h4 class="col-12 text-center font-weight-bold text-black-50">Tipos de retiro</h4>
        <MatButtonLink href="/DebitType/Create" Outlined="true" TrailingIcon="add">Agregar</MatButtonLink>
</div>
<div class="col-md-6 p-2 mat-elevation-z6 ">
    @foreach (var debitType in DebitTypes)
    {
        <div class="col-12 p-2 m-0 d-flex flex-wrap border-bottom border-secondary">
            <span class="col-md-8 justify-content-center d-flex align-items-center py-3">
                <strong>
                    @debitType.Description
                </strong>
            </span>
            <div class="col-md-4 d-flex flex-wrap justify-content-center">
                <MatButtonLink Class="col-12" Style="" Raised="true" Href="/DebitType/Update">Editar</MatButtonLink>
                <MatButton Class="col-12" Style="" Dense="true" OnClick="Delete">Elimminar</MatButton>
            </div>
        </div>

    }
</div>





@code {
    [Parameter] public List<DebitTypeVM> DebitTypes { get; set; }
        [Parameter] public EventCallback Delete { get; set; }

}
